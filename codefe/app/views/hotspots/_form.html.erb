<%= form_for @hotspot do |f| %>

  <% if  @hotspot.errors.any? %>
    Please correct the following errors:
    <ul>
      <% @hotspot.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :wifi_type %>
  <%= f.select :wifi_type, ["Free", "Fee-based"] %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :yelp_rating %>
  <%= f.number_field :yelp_rating, value: @hotspot.yelp_search[0] %>

  <%= f.label :biz_url %>
  <%= f.text_field :biz_url %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url, value: @hotspot.yelp_search[1] %>

  <%= f.submit %>

<% end %>