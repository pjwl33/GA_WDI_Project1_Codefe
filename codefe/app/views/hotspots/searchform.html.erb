<%= form_tag search_hotspots_path, method: 'get' do %>
  <%= label_tag :name_query, "Search Hotspot by Name" %>
  <%= text_field_tag :name_query %>
  <%= submit_tag "Search" %>
<% end %>

<%= form_tag search_hotspots_path, method: 'get' do %>
  <%= label_tag :location_query, "by Location" %>
  <%= text_field_tag :location_query %>
  <%= submit_tag "Search" %>
<% end %>

<%= form_tag search_hotspots_path, method: 'get' do %>
  <%= label_tag :rating_query, "by Yelp Rating" %>
  <%= select_tag :wifi_query, options_for_select([0.0, 0.5, 1.5, 2.0, 2.5, 3.0, 3.5, 4.0, 4.5, 5.0]) %>
  <%= submit_tag "Search" %>
<% end %>

<%= form_tag search_hotspots_path, method: 'get' do %>
  <%= label_tag :wifi_query, "by Wifi-Type" %>
  <%= select_tag :wifi_query, options_for_select(["Free", "Fee-based"]) %>
  <%= submit_tag "Search" %>
<% end %>