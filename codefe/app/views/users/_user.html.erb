<div>
  <% if @show_link %>
    <h4>User Name: <%= link_to user.name, user %></h4>
  <% else %>
    <h4>User Name: <%= user.name %></h4>
  <% end %>

  <p><strong>Email: </strong><%= user.email %>
    <strong>Admin: </strong> <%= yesno(user.admin) %>
  </p>

  <h3>Favorite Hotspots</h3>
    <% user.hotspots.each do |hotspot| %>
      <%= link_to hotspot.name, hotspot_path(hotspot) %>
      <%= form_tag '/removehotspot', method: 'post' do %>
        <%= hidden_field_tag :hotspot_id, hotspot.id %>
        <%= hidden_field_tag :user_id, user.id %>
        <%= submit_tag "Remove from Favorites" %>
      <% end %>
    <% end %>

</div>