<h3><%= link_to "Create New Account", new_user_path %></h3>

<h3>Login Form</h3>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="button">
    <%= submit_tag :login %>
  </div>

<% end %>
